@model PatoRestaurant.Models.Reservation
@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-danger shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Reserva</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="px-4 py-1">
                    <div class="row my-1">
                        <div class="col-md-6">
                            <div class="input-group input-group-static">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" disabled/>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-static">
                                <label asp-for="ReservationDate"></label>
                                <input asp-for="ReservationDate" class="form-control" disabled/>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-static">
                                <label asp-for="StatusReservationId"></label>
                                <input asp-for="StatusReservation.Name" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-md-4">
                            <div class="input-group input-group-static">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-static">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group input-group-static">
                                <label asp-for="Guests"></label>
                                <input asp-for="Guests" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

