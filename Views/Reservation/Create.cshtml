@model PatoRestaurant.Models.Reservation
@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-danger shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Reserva</h5>
                    <h6 class="text-white text-capitalize ps-3">Incluir</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <form asp-action="Create" method="post" class="px-4 py-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row my-1">
                        <div class="col-md-6">
                            <div class="input-group input-group-static">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-static">
                                <label asp-for="ReservationDate"></label>
                                <input asp-for="ReservationDate" class="form-control" />
                                <span asp-validation-for="ReservationDate" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-static">
                                <label asp-for="StatusReservationId"></label>
                                <select asp-for="StatusReservationId" class="form-control" asp-items="ViewBag.StatusReservationId">
                                    <option value="" disabled selected hidden>Selecione uma opção</option>
                                </select>
                                <span asp-validation-for="StatusReservationId" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row my-1">
                        <div class="col-md-4">
                            <div class="input-group input-group-static">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-static">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="input-group input-group-static">
                                <label asp-for="Guests"></label>
                                <input asp-for="Guests" class="form-control" />
                                <span asp-validation-for="Guests" class="text-danger col-12 text-xs pt-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.addEventListener('load', function () {
            document.querySelector('input[type="file"]').addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    var img = document.getElementById('PreviewImage');
                    img.src = URL.createObjectURL(this.files[0]);
                }
            });
        });
    </script>
}