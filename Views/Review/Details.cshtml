@model PatoRestaurant.Models.Review
@{
    ViewData["Title"] = "Avaliações";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-danger shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Avaliação</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="px-4 py-1">
                    <div class="row">
                        <div class="col-3">
                            <div class="input-group input-group-static">
                                <label class="col-12" asp-for="Image"></label>
                                <img src="@Model.Image" class="img-fluid mx-auto" id="PreviewImage" style="border-radius:50%"/>
                            </div>
                        </div>
                        <div class="col-9">
                            <div class="row my-1">
                                <div class="col-8">
                                    <div class="input-group input-group-static">
                                        <label asp-for="Name"></label>
                                        <input asp-for="Name" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="input-group input-group-static">
                                        <label asp-for="ReviewDate"></label>
                                        <input asp-for="ReviewDate" class="form-control" disabled/>
                                    </div>
                                </div>
                                <div class="col-1">
                                    <div class="input-group input-group-static">
                                        <label asp-for="Rating"></label>
                                        <input asp-for="Rating" class="form-control" disabled/>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group input-group-static">
                                <label asp-for="ReviewText"></label>
                                <textarea asp-for="ReviewText" class="form-control" rows="5" spellcheck="false" disabled></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

